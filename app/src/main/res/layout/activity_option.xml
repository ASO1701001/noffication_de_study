<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OptionActivity">

    <TextView
            android:text="通知を行う時間の範囲"
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/option_title2"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/SDS_INFO"/>
    <TextView
            android:text="通知で画面を出題し、解答します。"
            android:layout_width="0dp"
            android:layout_height="58dp" android:id="@+id/NDS_INFO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/option_title3"
            app:layout_constraintHorizontal_bias="0.498" android:textAlignment="center" android:textSize="20sp"/>
    <TextView
            android:text="通知を行う間隔"
            android:layout_width="411dp"
            android:layout_height="40dp" android:id="@+id/option_title4"
            android:textSize="24sp"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/option_title2"/>
    <TextView
            android:text="通知"
            android:layout_width="0dp"
            android:layout_height="80dp" android:id="@+id/option_title3"
            android:textSize="36sp"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@+id/OA_Google_Login_BTN"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="通知"
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/option_title"
            android:textSize="36sp"
            android:textAlignment="viewStart"
            app:layout_constraintTop_toBottomOf="@+id/OA_Google_Login_BTN"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="ログイン"
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/option_title1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_title_background" android:textSize="36sp"
            android:textAlignment="viewStart"/>
    <Button
            android:text="Googleでログイン"
            android:layout_width="0dp"
            android:layout_height="80dp" android:id="@+id/OA_Google_Login_BTN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:textAlignment="viewEnd"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/option_title1"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/editbox_background_normal"
            android:id="@+id/activity_title_background" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="fitXY"/>
    <TextView
            android:text="オプション"
            android:layout_width="200dp"
            android:layout_height="55dp" android:id="@+id/textView"
            app:layout_constraintBottom_toBottomOf="@+id/activity_title_background"
            app:layout_constraintTop_toTopOf="@+id/activity_title_background"
            app:layout_constraintEnd_toEndOf="@+id/activity_title_background"
            app:layout_constraintStart_toStartOf="@+id/activity_title_background" android:layout_marginStart="8dp"
            android:textSize="36sp" android:textAlignment="center"/>
    <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/OA_Back_BTN"
            app:layout_constraintStart_toStartOf="@+id/activity_title_background"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView"/>
    <CheckBox
            android:text="通知de勉強モード"
            android:layout_width="0dp"
            android:layout_height="120dp" android:id="@+id/OA_NDS_Mode_BTN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="36sp" android:textAlignment="textStart"
            app:layout_constraintTop_toBottomOf="@+id/option_title"/>
    <CheckBox
            android:text="画面点灯de勉強モード"
            android:layout_width="0dp"
            android:layout_height="120dp" android:id="@+id/OA_SDS_Mode_BTN"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/OA_NDS_Mode_BTN"
            app:layout_constraintHorizontal_bias="0.0" android:textSize="36sp"/>
    <TextView
            android:text="画面点灯したときに問題の通知を行います。"
            android:layout_width="411dp"
            android:layout_height="58dp" android:id="@+id/SDS_INFO"
            android:textAlignment="center" android:textSize="20sp"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/NDS_INFO" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="仮"
            android:layout_width="90dp"
            android:layout_height="40dp" android:id="@+id/OA_Noffication_Time_Between"
            app:layout_constraintTop_toBottomOf="@+id/SDS_INFO" app:layout_constraintEnd_toEndOf="@+id/option_title2"
            android:layout_marginEnd="8dp"/>
    <Spinner
            android:layout_width="95dp"
            android:layout_height="40dp" android:id="@+id/OA_Noffication_Interval"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/OA_Noffication_Time_Between"
            android:entries="@array/OA_Noffication_Interval_list"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OptionActivity">

    <TextView
            android:text="オプション"
            android:layout_width="200dp"
            android:layout_height="55dp" android:id="@+id/textView"
            android:textSize="36sp" android:textAlignment="center"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/OA_Back_BTN" app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintBottom_toTopOf="@+id/scrollView3"
            android:layout_marginBottom="16dp" android:layout_marginTop="16dp"/>
    <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/OA_Back_BTN"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="580dp"
            android:id="@+id/scrollView3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:baselineAligned="false">
            <TextView
                    android:text="ログイン"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" android:id="@+id/option_title1"
                    android:textSize="36sp"
                    android:textAlignment="viewStart"/>
            <com.google.android.gms.common.SignInButton
                    android:id="@+id/sign_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:text="通知"
                    android:layout_width="411dp"
                    android:layout_height="wrap_content" android:id="@+id/option_title"
                    android:textSize="36sp"
                    android:textAlignment="viewStart"/>
            <CheckBox
                    android:text="通知de勉強モード"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/OA_NDS_Mode_BTN"
                    android:textSize="32dp" android:textAlignment="viewStart"
            />
            <TextView
                    android:text="通知で画面を出題し、解答します。"
                    android:layout_width="match_parent"
                    android:layout_height="58dp" android:id="@+id/NDS_INFO"
                    android:textAlignment="textStart" android:textSize="20dp"/>
            <CheckBox
                    android:text="画面点灯de勉強モード"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/OA_SDS_Mode_BTN"
                    android:textSize="32dp" android:textAlignment="viewStart"/>
            <TextView
                    android:text="画面点灯したときに問題の通知を行います。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/SDS_INFO"
                    android:textAlignment="textStart" android:textSize="20dp"
                    android:paddingTop="30px" android:paddingRight="50px" android:paddingBottom="30px"
                    android:paddingLeft="50px"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="通知を行う時間の範囲"
                        android:layout_width="290dp"
                        android:layout_height="40dp" android:id="@+id/option_title2"
                        android:textSize="24sp"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                />
                <Spinner
                        android:layout_width="120dp"
                        android:layout_height="40dp" android:id="@+id/spinner"
                        android:spinnerMode="dialog"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView
                        android:text="通知を行う間隔"
                        android:layout_width="290dp"
                        android:layout_height="40dp" android:id="@+id/option_title4"
                        android:textSize="24sp"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                />
                <Spinner
                        android:layout_width="120dp"
                        android:layout_height="40dp" android:id="@+id/OA_Noffication_Interval"
                        android:entries="@array/OA_Noffication_Interval_list"
                />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
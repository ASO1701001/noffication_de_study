<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TitleActivity">

    <Button
            android:text="オプション"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/TA_Option_BTN"
            android:textSize="24sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginBottom="90dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="統計情報"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/TA_Statics_BTN"
            android:textSize="24sp"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toTopOf="@+id/TA_Option_BTN" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="通知de勉強"
            android:layout_width="220dp"
            android:layout_height="50dp" android:id="@+id/Title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.496" android:textSize="36sp" android:textAlignment="center"
            android:layout_marginTop="150dp"/>
    <Button
            android:text="問題を解く"
            android:layout_width="200dp"
            android:layout_height="50dp" android:id="@+id/TA_Question_BTN"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/Title" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.497" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuestionOptionActivity">

    <ImageView
            android:layout_width="360dp"
            android:layout_height="560dp" app:srcCompat="@android:drawable/alert_light_frame"
            android:id="@+id/imageView7"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.485" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" app:layout_constraintVertical_bias="0.106"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="30dp" app:srcCompat="@android:drawable/arrow_down_float"
            android:id="@+id/imageButton"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintTop_toTopOf="@+id/textView5" app:layout_constraintBottom_toBottomOf="@+id/textView5"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/editbox_background_normal"
            android:id="@+id/imageView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/QOA_Back_BTN"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="55dp" android:id="@+id/textView7"
            android:textSize="18sp" android:text="出題オプション" android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"/>
    <Button
            android:text="出題開始"
            android:layout_width="120dp"
            android:layout_height="60dp" android:id="@+id/QOA_Start_BTN"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="試験回選択"
            android:layout_width="100dp"
            android:layout_height="25dp" android:id="@+id/textView10"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="@+id/imageView7"
            android:layout_marginStart="64dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@+id/imageView7"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="30dp" app:srcCompat="@android:drawable/arrow_down_float"
            android:id="@+id/imageButton2"
            app:layout_constraintEnd_toStartOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"/>
    <TextView
            android:text="ジャンル選択"
            android:layout_width="120dp"
            android:layout_height="25dp" android:id="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/imageButton2" android:layout_marginStart="4dp"
            android:textSize="18sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="276dp"/>
    <TextView
            android:text="問題数選択"
            android:layout_width="130dp"
            android:layout_height="25dp" android:id="@+id/textView8"
            android:textSize="18sp" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/textView5"/>
    <TextView
            android:text="出題方法"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" app:layout_constraintStart_toStartOf="@+id/imageView7"
            android:layout_marginStart="70dp" android:textSize="18sp"/>
    <RadioGroup
            android:layout_width="211dp"
            android:layout_height="91dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="@+id/textView9"
    >
        <RadioButton
                android:text="順番に出題"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/QOA_Select_Method_Order_RBTN"/>
        <RadioButton
                android:text="ランダムに出題"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/QOA_Select_Method_Random_RBTN"/>
    </RadioGroup>
    <CheckBox
            android:text="CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/QOA_Select_Genres_1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/textView5"
    />
    <CheckBox
            android:text="CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/QOA_Select_Genres_2"
            app:layout_constraintTop_toBottomOf="@+id/QOA_Select_Genres_1"
            app:layout_constraintStart_toStartOf="@+id/QOA_Select_Genres_1"
    />
    <Spinner
            android:layout_width="40dp"
            android:layout_height="25dp" android:id="@+id/QOA_Question_Amount_BOX"
            app:layout_constraintStart_toEndOf="@+id/textView8" android:layout_marginStart="90dp"
            app:layout_constraintTop_toTopOf="@+id/textView8" app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>
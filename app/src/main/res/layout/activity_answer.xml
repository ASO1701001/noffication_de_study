<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnswerActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/editbox_background_normal"
            android:id="@+id/activity_title_background2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="1.0"/>
    <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/AA_Back_BTN"
            app:layout_constraintTop_toTopOf="@+id/activity_title_background2"
            app:layout_constraintStart_toStartOf="@+id/activity_title_background2" android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="360dp"
            android:layout_height="560dp" app:srcCompat="@android:drawable/alert_light_frame"
            android:id="@+id/imageView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_title_background2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.485" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="320dp"
            android:layout_height="520dp" android:id="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3" app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
    <Button
            android:text="次の問題へ"
            android:layout_width="220dp"
            android:layout_height="55dp" android:id="@+id/AA_Next_BTN"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"/>
    <TextView
            android:layout_width="259dp"
            android:layout_height="19dp"
            android:id="@+id/answer_examNumber_text" android:text="平成31年度春期午前"
            app:layout_constraintStart_toStartOf="@+id/imageView3" android:layout_marginStart="36dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="@+id/textView6"
    />
    <TextView
            android:text="問9"
            android:layout_width="74dp"
            android:layout_height="31dp"
            android:id="@+id/answer_questionNumber_text" android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/answer_examNumber_text"
            app:layout_constraintTop_toBottomOf="@+id/answer_examNumber_text"/>
    <TextView
            android:text="正解：ア"
            android:layout_width="128dp"
            android:layout_height="43dp"
            android:id="@+id/answer_question_correct_text"
            android:textSize="28sp" app:layout_constraintTop_toBottomOf="@+id/answer_questionNumber_text"
            app:layout_constraintStart_toStartOf="@+id/answer_questionNumber_text"/>
    <TextView
            android:text="TextView"
            android:layout_width="280dp"
            android:layout_height="335dp"
            android:id="@+id/answer_answerText_text"
            app:layout_constraintStart_toStartOf="@+id/answer_question_correct_text"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/answer_question_correct_text"
            android:textSize="20sp"/>
</android.support.constraint.ConstraintLayout>
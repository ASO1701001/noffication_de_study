<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnswerActivity">

    <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/AA_Back_BTN"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="次の問題へ"
            android:layout_width="220dp"
            android:layout_height="55dp" android:id="@+id/AA_Next_BTN"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"/>
    <ScrollView
            android:layout_width="360dp"
            android:layout_height="520dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="86dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="125dp">
        <LinearLayout android:layout_width="360dp" android:layout_height="520dp"
                      android:orientation="vertical">
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/AA_textView"
            />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
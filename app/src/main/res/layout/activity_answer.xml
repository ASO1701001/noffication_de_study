<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AnswerActivity" android:isScrollContainer="false">

    <ImageButton
            android:layout_width="55dp"
            android:layout_height="0dp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/AA_Back_BTN"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="65dp" app:layout_constraintBottom_toTopOf="@+id/answer_examNumber_text"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="次の問題へ"
            android:layout_width="220dp"
            android:layout_height="0dp" android:id="@+id/AA_Next_BTN"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/answer_examNumber_text" android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="259dp"
            android:layout_height="0dp"
            android:id="@+id/answer_examNumber_text" android:text="平成31年度春期午前"
            android:layout_marginTop="128dp"
            app:layout_constraintStart_toEndOf="@+id/answer_question_correct_text" android:layout_marginBottom="514dp"
            app:layout_constraintEnd_toEndOf="@+id/answer_question_correct_text"
            app:layout_constraintBottom_toTopOf="@+id/AA_Next_BTN" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="問9"
            android:layout_width="74dp"
            android:layout_height="0dp"
            android:id="@+id/answer_questionNumber_text" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/answer_examNumber_text"
            app:layout_constraintEnd_toEndOf="@+id/answer_question_correct_text"
            app:layout_constraintBottom_toTopOf="@+id/answer_question_correct_text"
            app:layout_constraintStart_toStartOf="@+id/AA_Back_BTN"
            android:layout_marginStart="53dp" android:layout_marginEnd="54dp"/>
    <TextView
            android:text="正解：ア"
            android:layout_width="128dp"
            android:layout_height="0dp"
            android:id="@+id/answer_question_correct_text"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="@+id/AA_answerComment_text"
            app:layout_constraintTop_toBottomOf="@+id/answer_questionNumber_text" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/AA_answerComment_text"/>
    <TextView
            android:text="解説文"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/AA_answerComment_text"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/answer_question_correct_text" android:layout_marginBottom="135dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="61dp" android:layout_marginEnd="61dp"
            android:isScrollContainer="true"/>
</android.support.constraint.ConstraintLayout>
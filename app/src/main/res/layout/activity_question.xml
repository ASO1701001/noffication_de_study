<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuestionActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp" app:srcCompat="@android:drawable/editbox_background_normal"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="fitXY"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:src="@android:drawable/ic_media_play"
            android:layout_width="55dp"
            android:layout_height="55dp" android:id="@+id/AA_Next_BTN"
            app:layout_constraintEnd_toEndOf="@+id/imageView4" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="55dp"
            android:layout_height="55dp" app:srcCompat="@android:drawable/ic_menu_revert"
            android:id="@+id/AA_End_BTN"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="89dp"
            android:layout_height="47dp" android:id="@+id/textView3"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="@+id/imageView4"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>